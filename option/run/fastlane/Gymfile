# GYM 配置
scheme "XXX"
workspace "XXX.xcworkspace"
output_name "XXX"
clean true

for_lane :test do

	output_directory "./build/test"
	configuration "Debug"
	export_options(
  		method: "ad-hoc",
 		thinning: "<thin-for-all-variants>",
  		include_symbols: false,
  		include_bitcode: false,
	)
end

for_lane :beta do
	output_directory "./build/beta"
	configuration "Release"
	export_options(
  		method: "ad-hoc",
 		thinning: "<thin-for-all-variants>",
 		include_symbols: false,
  		include_bitcode: false,
	)
end

for_lane :release do
	output_directory "./build/release"
	configuration "Release"
	export_options(
  		method: "app-store",
 		thinning: "<thin-for-all-variants>",
 		include_symbols: false,
  		include_bitcode: false,
	)
end